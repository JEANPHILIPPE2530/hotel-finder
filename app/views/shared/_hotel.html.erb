<!-- START OF SEPERATION -->
<div class="container">
    <div class="container-fluid mt-5 border-bottom">
        <h3 class="display-8 fw-bold">Hotel</h3>
    </div>
</div>
<!-- END OF SEPERATION -->


<!-- START OF HOTEL SECTION -->
<section class="py-3">
    <div class="container px-4 px-lg-5 mb-5">
        <div class="">
            <div class="d-flex mt-1">
                <button type="button" class="btn btn-outline-dark flex-shrink-0" style="border-radius: 8px; font-size:12px;"><%= link_to "Edit this hotel", edit_hotel_path(@hotel) %></button>
                <button type="button" class="btn btn-outline-dark flex-shrink-0 mx-3" style="border-radius: 8px; font-size:12px;"><%= link_to "Delete this hotel", hotel_path(@hotel), method: :delete, data: {confirm: "Are you sure you want to delete?"} %></button>
            </div>
            <div class="album py-4 bg-white">
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1540541338287-41700207dee6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"></div>
            </div>
            <div class="col-lg-12 w-100" style="border-radius:12px;">
                <h1 class="display-5 fw-bolder mt-5"><%= @hotel.name %></h1>
                <p class="lead"><%= @hotel.address %></p>
                <p class="lead">This hotel is a modern, elegant 5-star hotel overlooking the sea, perfect for a romantic, charming vacation, in Mauritius.</p>
            </div>

            <!-- START OF SEPERATION -->
            <div class="container">
                <div class="container-fluid mt-5 border-bottom">
                    <h3 class="display-8 fw-bold">Our Room</h3>
                </div>
            </div>
            <!-- END OF SEPERATION -->
            <div class="col-8 py-5">
                <!-- START OF ROOM SECTION -->
                    <div class="py-0 px-0 card" style="border-radius:12px;">
                        <div class="row">
                            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="https://images.unsplash.com/photo-1505773278895-5efa7b11679a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=922&q=80" alt="image" style="border-radius: 12px;"></div>
                            <div class="col-md-6">
                                <h1 class="display-5 fw-bolder">Best Room </h1>
                                <p class="lead" style="font-size:16px;">Beautiful seafront room wide and spacious.</p>
                                    <% @rooms.each do |room| %>
                                    <p>Room Capacity: <%= room.capacity %></p>
                                <div class="fs-5 mb-5">
                                    <span class="" style="color:red; text-decoration: line-through;">Rs 20000</span>
                                        <span>Rs <%= room.price %></span>
                                        <div class="d-flex mt-4">
                                            <button type="button" class="btn btn-warning flex-shrink-0 w-100" style="border-radius: 8px; color:white;"><%= link_to "Book this room", new_room_booking_path(room) %></button>
                                        </div>
                                <% end %>
                                <div class="d-flex mt-1">
                                    <button type="button" class="btn btn-outline-dark flex-shrink-0" style="border-radius: 8px; font-size: 12px"><%= link_to "Edit this room", edit_room_path(@hotel) %></button>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <!-- END OF ROOM SECTION -->
            </div>
            <!-- START OF SEPERATION -->
            <div class="container">
                <div class="container-fluid mt-3 border-bottom">
                    <h3 class="display-8 fw-bold"></h3>
                </div>
            </div>
            <!-- END OF SEPERATION -->
            <div class="d-flex mt-4 w-100">
                <button type="button" class="btn btn-outline-dark flex-shrink-0 mx-auto w-100" style="border-radius: 8px;"><%= link_to "View other hotels", hotels_path %></button>
            </div>
        </div>
    </div>
</section>
<!-- END OF HOTEL SECTION -->



