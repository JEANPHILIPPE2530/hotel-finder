<div class="modal modal-signin position-static d-block bg-white py-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document" style="height:90vh;">
        <div class="modal-content rounded-4 shadow" style="border-radius: 12px;">
            <div class="modal-header p-5 pb-4 border-bottom-0 bg d-flex justify-content-center">
            <!-- <h5 class="modal-title">Modal title</h5> -->
            <h2 class="fw-bold mb-0">Log in</h2>
            </div>
            <div class="modal-body p-5 pt-0">
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-inputs">
                    <%= f.input :email,
                                required: false,
                                autofocus: true,
                                input_html: { autocomplete: "email" } %>
                    <%= f.input :password,
                                required: false,
                                input_html: { autocomplete: "current-password" } %>
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>
                  <div class="form-actions btn btn-primary mt-3" style="border-radius: 12px; width: 100%;">
                    <%= f.button :submit, "Log in" %>
                  </div>
                <% end %>
                <div class="mt-3">
                  <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>
