<div class="modal modal-signin position-static d-block bg-white py-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document" style="height:90vh;">
        <div class="modal-content rounded-4 shadow" style="border-radius: 12px;">
            <div class="modal-header p-5 pb-4 border-bottom-0 bg d-flex justify-content-center">
            <!-- <h5 class="modal-title">Modal title</h5> -->
            <h2 class="fw-bold mb-0">Book Room</h2>
            </div>
            <div class="modal-body p-5 pt-0">
                <%= simple_form_for [@room, @booking] do |f|%>
                        <%# f.input :start, as: :date %>
                        <%# f.input :end, as: :date  %>
                        <div class="my-4"><p>Arrival date:</p><%= f.text_field :start, data: {behavior: "flatpickr" } %></div>
                        <div class="my-4"><p>Departure date:</p><%= f.text_field :end, data: {behavior: "flatpickr" } %></div>
                        
                        
                        <%= f.submit "Book", class: "btn btn-success" %>
                        <%= link_to "Back", root_path, class: "btn btn-primary" %>
                    <% end %>
            </div>
        </div>
    </div>
</div>

